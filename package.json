{
  "name": "inmapper-kiosk-backend",
  "version": "2.0.0",
  "description": "Professional backend system for managing Inmapper kiosk devices and landing page configurations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t inmapper-kiosk-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env inmapper-kiosk-backend",
    "db:seed": "node scripts/seed.js"
  },
  "keywords": [
    "kiosk",
    "inmapper",
    "backend",
    "api",
    "digital-signage",
    "indoor-navigation",
    "mongodb"
  ],
  "author": "inMapper",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mongoose": "^8.0.3",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
